/**
 * Adds body classes for node
 *
 * @param object $node
 * @param string $body_classes
 * @param bool $logged_in
 * @return string
 */
function focus_groups_get_body_classes($node, $body_classes = '') {
	if(!$node || !isset($node->og_groups)) {
		return $body_classes;
	}

	$body_classes = explode(' ', $body_classes);
	// load color for nodes which belong to a project
	// add proprietary focusgroup short to color a page
	if($fg = focus_groups_get_focus_group($node->og_groups)) {
		$body_classes[] = 'fg' . $fg['field_fgnumber_value'];
	}

	// og adds only one group as og-context, not all of them
	foreach($node->og_groups as $gid) {
		$body_classes[] = 'og-context-' . $gid;
	}

	// load color for focus group
	if(isset($node->field_fgnumber[0]['value']) && (int)$node->field_fgnumber[0]['value'] > 0 && user_access('view focus group colors')) {
		$body_classes[] = 'fg' . $node->field_fgnumber[0]['value'];
	}

	return implode(' ', array_unique($body_classes));
}

/**
 * Loads group nodes
 *
 * @param array $groups
 * @param bool $logged_in
 * @return array
 */
function focus_groups_load_group_details($groups) {
	$return_groups = array();

	if($groups) {
		foreach($groups as $nid => $g) {
			$current_group = node_load($nid);

			if($current_group->type == 'focusgroup' && !user_access('view focus groups')) {
				continue;
			}

			$return_groups[$current_group->nid] = $current_group;
		}
	}

	return $return_groups;
}

