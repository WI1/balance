/**
 * Checks if the given node is a project or focusgroup content type
 *
 * @param object $node
 * @return bool
 */
function focus_groups_is_project($node) {
	if (in_array($node->type, array('project', 'focusgroup'))) {
		return TRUE;
	} else {
		return FALSE;
	}
}

